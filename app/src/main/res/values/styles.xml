<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="searchbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="empty_list_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:textSize">@dimen/empty_list_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detail_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="detail_info">
        <item name="android:background">@color/green_200</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>